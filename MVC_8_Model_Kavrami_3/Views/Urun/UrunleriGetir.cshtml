@model UrunVm
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UrunleriGetir</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="panel panel-danger">
            <div class="panel-heading">
                Tükenmek üzere
            </div>
            <div class="panel-body">
                @foreach (var item in Model.az_urunler)
            {
                <div class="col-md-3 col-lg-3">
                    <img width="100%" src="~/fonts/Negan.jpg" />
                    <hr />
                    <div>
                        @item.ProductName
                        <br />
                        @item.UnitPrice
                    </div>
                </div>
        }
            </div>
            <div class="panel-footer">

            </div>
        </div>
        <div class="panel panel-info">
            <div class="panel-heading">
                En Ucuz Ürünler
            </div>
            <div class="panel-body">
                @foreach (var item in Model.az_urunler)
            {
                <div class="col-md-3 col-lg-3">
                    <img width="100%" src="~/fonts/Negan.jpg" />
                    <hr />
                    <div>
                        @item.ProductName
                        <br />
                        @item.UnitPrice
                    </div>
                </div>
        }
            </div>
            <div class="panel-footer">

            </div>
        </div>
        <div class="panel panel-success">
            <div class="panel-heading">
                En Pahalı Ürünler
            </div>
            <div class="panel-body">
                @foreach (var item in Model.az_urunler)
            {
                <div class="col-md-3 col-lg-3">
                    <img width="100%" src="~/fonts/Negan.jpg" />
                    <hr />
                    <div>
                        @item.ProductName
                        <br />
                        @item.UnitPrice
                    </div>
                </div>
        }
            </div>
            <div class="panel-footer">

            </div>
        </div>
    </div>
</body>
</html>